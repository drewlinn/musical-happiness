<h1>Add a new show</h1>
<form action="/shows" method="post">
  <label for="band">Band</label>
  <select name="band">
    @foreach(var band in @Model["band"])
    {
      <option value="@band.GetId()">@band.GetBandName()</option>
    }
  </select>
  <label for="venue">Venue</label>
  <select name="venue">
    @foreach(var venue in @Model["venue"])
    {
      <option value="@venue.GetId()">@venue.GetVenueName()</option>
    }
  </select>
  <label for="date">Date and Time</label>
  <input id="date" name="date" type="datetime-local">
  <button type="submit">Submit</button>
</form>
<a href="/">Go Back</a>
<a href="/shows">View all shows</a>
